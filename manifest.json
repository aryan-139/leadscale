{
    "manifest_version": 3,
    "name": "Text to Stack Sender",
    "version": "1.0",
    "permissions": ["contextMenus", "activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": ["<all_urls>"],
    "commands": {
      "sendTextToStack": {
        "suggested_key": {
          "default": "Ctrl+Shift+Y"
        },
        "description": "Send selected text to Stack"
      }
    }
  }
  
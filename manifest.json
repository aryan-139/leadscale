{
  "manifest_version": 3,
  "name": "Text to Stack Sender",
  "version": "1.0",
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "send-selected-text": {
      "suggested_key": {
        "default": "Alt+Shift+X",
        "mac": "Option+Shift+X"
      },
      "description": "Send selected text to FastAPI"
    }
  },
  "host_permissions": ["<all_urls>"]
}
